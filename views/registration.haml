.col-md-8
  %h2 New customer
  %br
  %form{method: 'POST', action: '/new_customer'}
    .form-group
      %label{for: 'firstname'} First Name:
      %input.form-control{type: 'text', name: 'customer[firstname]', value: "#{@customer.firstname}"}
    .form-group
      %label{for: 'lastname'} Last Name:
      %input.form-control{type: 'text', name: 'customer[lastname]', value: "#{@customer.lastname}"}
    .form-group
      %label{for: 'email'} Email:
      %input.form-control{type: 'text', name: 'customer[email]', value: "#{@customer.email}"}
    .form-group
      %label{for: 'password'} Password:
      %input.form-control{type: 'password', name: 'customer[password]', value: "#{@customer.password}"}
    %button{type: 'submit', class: 'btn btn-default'} Save Customer